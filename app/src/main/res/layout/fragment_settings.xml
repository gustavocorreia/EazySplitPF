<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context=".SettingsFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                style="@style/header_title"
                android:text="@string/text_name"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#ff0000"
                android:id="@+id/tvHead"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="150dp"
                android:layout_width="429dp"
                android:layout_marginTop="4dp"
                android:scrollbarSize="35dp"/>
        <Button
                android:hint="@string/button_edit_customer"
                android:layout_width="420dp"
                android:layout_height="100dp"
                android:background="#FFFAFA"
                android:id="@+id/btEditCustomer"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHead"/>
        <Button
                android:hint="@string/button_language"
                android:layout_width="420dp"
                android:layout_height="100dp"
                android:id="@+id/btLanguage"
                android:background="#FFFAFA"
                app:layout_constraintEnd_toEndOf="@+id/btEditCustomer"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btEditCustomer"
                app:layout_constraintStart_toStartOf="@+id/btEditCustomer"
                app:layout_constraintHorizontal_bias="1.0"/>
        <Button
                android:hint="@string/button_payment_methods"
                android:layout_width="420dp"
                android:layout_height="100dp"
                android:id="@+id/btPaymentMethod"
                app:layout_constraintEnd_toEndOf="@+id/btLanguage"
                app:layout_constraintStart_toStartOf="@+id/btLanguage"
                android:background="#FFFAFA"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btLanguage"/>
        <Button
                android:hint="@string/button_exit"
                android:layout_width="420dp"
                android:layout_height="100dp"
                android:id="@+id/btExit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#FFFAFA"
                app:layout_constraintTop_toBottomOf="@+id/btPaymentMethod"/>



    </android.support.constraint.ConstraintLayout>


</FrameLayout>