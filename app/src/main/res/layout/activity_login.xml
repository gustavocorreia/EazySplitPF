<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LoginActivity">

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:id="@+id/tvLogo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" tools:text="@string/app_name"/>
    <EditText
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/placeholderUserName"
            android:ems="10"
            android:id="@+id/etUserName"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLogo"
            app:layout_constraintStart_toStartOf="@+id/tvLogo" app:layout_constraintEnd_toEndOf="@+id/tvLogo"/>
    <EditText
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/placeholderPassword"
            android:ems="10"
            android:id="@+id/etPassword" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etUserName"
            app:layout_constraintEnd_toEndOf="@+id/etUserName" app:layout_constraintStart_toStartOf="@+id/etUserName"
            app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>