<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.LoginActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <TextView
                style="@style/header_title"
                android:id="@+id/tvLogo"
                android:text="@string/text_name"
                android:gravity="center"
                android:layout_marginTop="20dp"/>


        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/etUserName"
                    style="@style/edit_text"
                    android:hint="@string/edittext_username"
                    android:inputType="text" android:autofillHints=""/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimary">

            <EditText
                    android:id="@+id/etPassword"
                    style="@style/edit_text"
                    android:inputType="textPassword"
                    android:hint="@string/edittext_password" android:autofillHints=""/>

        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/btLogin"
                style="@style/button_login"
                android:text="@string/button_login"/>

        <TextView
                android:id="@+id/tvForgotPassword"
                style="@style/text_link"
                android:text="@string/link_forgotpass"
                android:gravity="center"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/text_or"
                    android:textColor="#000000"/>

            <View
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toLeftOf="@id/tvDivider"/>

            <View
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/tvDivider"/>

        </RelativeLayout>

        <Button
                android:id="@+id/btFacebookLogin"
                style="@style/button_facebook"/>

        <Button
                android:id="@+id/btGoogleLogin"
                style="@style/button_google"/>

        <TextView
                android:id="@+id/tvOtherCustomer"
                style="@style/text_link"
                android:text="@string/link_register"
                android:gravity="center" android:layout_alignParentStart="true"/>

    </LinearLayout>
</ScrollView>

