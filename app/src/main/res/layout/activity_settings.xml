<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SettingsActivity">

    <TextView
            style="@style/header_title"
            android:text="@string/text_name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#ff0000"
            android:id="@+id/tvHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="150dp"
            android:layout_width="429dp"
            android:layout_marginTop="4dp" android:scrollbarSize="35dp"/>


    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    <TextView
            android:text="usuÃ¡rio logando"
            android:layout_width="171dp"
            android:layout_height="16dp"
            tools:layout_editor_absoluteY="123dp"
            android:id="@+id/tvuser"
            app:layout_constraintStart_toStartOf="@+id/tvHead"
            android:layout_marginStart="24dp" android:textColor="@color/white"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="92dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ivUser" app:layout_constraintEnd_toEndOf="@+id/tvHead"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvHead"/>
    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="230dp"
            app:cardBackgroundColor="@android:color/holo_red_dark"
            android:id="@+id/cardView" app:layout_constraintStart_toStartOf="@+id/btpagamento"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="170dp"
            android:id="@+id/btpagamento"
            android:background="@drawable/ic_credit_card_multiple_black_48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Forma de pagamento"
            android:layout_width="286dp"
            android:layout_height="23dp"
            android:id="@+id/tvPagamento" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvHead"
            app:layout_constraintBottom_toTopOf="@+id/cardView" app:layout_constraintStart_toEndOf="@+id/btpagamento"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.545"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idioma"
            android:background="@drawable/ic_earth_black_24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/btpagamento"/>
    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="306dp"
            app:layout_constraintStart_toStartOf="@+id/idioma" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"/>
    <TextView
            android:text="Idioma"
            android:layout_width="265dp"
            android:layout_height="19dp" tools:layout_editor_absoluteY="258dp"
            android:id="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/idioma"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="325dp"
            android:id="@+id/btSobre"
            android:background="@drawable/ic_information_outline_black_24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Sobre o app"
            android:layout_width="260dp"
            android:layout_height="22dp" tools:layout_editor_absoluteY="334dp"
            android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btSobre" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.333"/>
    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="397dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="409dp"
            android:id="@+id/button5" app:layout_constraintStart_toStartOf="@+id/btSobre"
            android:background="@drawable/ic_power_black_24dp"/>
    <TextView
            android:text="Sair"
            android:layout_width="277dp"
            android:layout_height="29dp" tools:layout_editor_absoluteY="417dp"
            android:id="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="20dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="486dp"
            tools:layout_editor_absoluteX="8dp"/>
    <Button
            android:layout_width="41dp"
            android:layout_height="35dp" tools:layout_editor_absoluteY="104dp"
            tools:layout_editor_absoluteX="194dp" android:id="@+id/btEditar"
            android:background="@drawable/ic_pencil_outline_black_36dp"/>


</android.support.constraint.ConstraintLayout>