<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <!-- Substituir por um fragment -->
    <TextView
            style="@style/header_title"
            android:text="@string/text_name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#ff0000"
            android:id="@+id/tvHead" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_height="105dp" android:layout_width="447dp"
            app:layout_constraintHorizontal_bias="0.277"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textAutoComplete"
            android:hint="@string/edittext_search_restaurant"
            android:ems="10"
            android:id="@+id/etSearchRestaurant"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tvHead"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvListRestaurante"
            android:layout_width="397dp"
            android:layout_height="490dp"
            android:orientation="horizontal"
            tools:listitem="@layout/restaurant_row"

            app:layout_constraintTop_toBottomOf="@+id/etSearchRestaurant"
            app:layout_constraintEnd_toEndOf="@+id/etSearchRestaurant"
            app:layout_constraintStart_toStartOf="@+id/etSearchRestaurant" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/navMenu"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>



</android.support.constraint.ConstraintLayout>