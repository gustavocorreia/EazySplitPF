<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.CardActivity">

    <TextView
            style="@style/header_title"
            android:text="@string/text_name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#ff0000"
            android:id="@+id/tvHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="97dp"
            android:layout_width="429dp"
            android:layout_marginTop="4dp"/>


    <EditText
            android:id="@+id/edNcard"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Digite o Número do cartão"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/edNameCard" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/edNameCard"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/linearLayout"
                  app:layout_constraintStart_toStartOf="@+id/edCPF" tools:layout_editor_absoluteY="208dp">
        <EditText
                android:id="@+id/edCvc"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="cvc"/>
        <EditText android:layout_width="178dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="50dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_marginBottom="15dp"
                  android:singleLine="true"
                  android:hint="validade"
           />
    </LinearLayout>
    <EditText
            android:id="@+id/edNameCard"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Digite o Nome do titular"
            tools:layout_editor_absoluteX="17dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="32dp"/>
    <EditText
            android:id="@+id/edCPF"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Digite o CPF do titular"
            tools:layout_editor_absoluteY="163dp" tools:layout_editor_absoluteX="22dp"/>
    <Button
            android:id="@+id/btSaveCard"
            style="@style/button_login"
            android:text="Salvar"
            tools:layout_editor_absoluteY="513dp" app:layout_constraintEnd_toEndOf="@+id/edNcard"
            app:layout_constraintStart_toStartOf="@+id/edNcard"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>





</android.support.constraint.ConstraintLayout>