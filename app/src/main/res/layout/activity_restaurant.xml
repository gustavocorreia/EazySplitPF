<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.RestaurantActivity">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@color/colorLink"
            android:id="@+id/ivRestaurantMap"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvRating"
                    android:text="avaliação"/>



    </LinearLayout>
    <TextView
            android:text="nome do restarante"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/tvRestaurantTitle"/>
    <TextView
            android:text="lasdasdsad dasdsadas asdasdasdsa

asdsadsaaaada dsadasdsa asdasdasda asdsa"
            android:layout_width="match_parent"
            android:layout_height="96dp" android:id="@+id/tvDescription"/>

    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:apiKey="@string/google_api_key"
            android:id="@+id/mapView"/>
</LinearLayout>