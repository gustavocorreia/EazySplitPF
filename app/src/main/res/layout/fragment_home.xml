<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".HomeFragment">


    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">
    <!-- Substituir por um fragment -->
    <TextView
            style="@style/header_title"
            android:text="@string/text_name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#ff0000"
            android:layout_height="150dp"
            android:layout_width="429dp"
            android:layout_marginTop="4dp"
            android:scrollbarSize="35dp"
            android:id="@+id/tvHead" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.277"/>


        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvListRestaurante"
                android:layout_width="397dp"
                android:layout_height="490dp"
                android:orientation="horizontal"
                tools:listitem="@layout/restaurant_row"

                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvHead"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>